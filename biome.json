{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules",
      ".next",
      "out",
      "public",
      "next-env.d.ts",
      "generated/prisma",
      "prisma/generated"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "linter": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      "public",
      ".rsbuild",
      ".tanstack",
      "./src/routeTree.gen.ts"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noPositiveTabindex": "off"
      }
    }
  }
}
